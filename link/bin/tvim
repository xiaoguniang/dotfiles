#!/bin/zsh
# Author            : Hongbo Liu <hbliu@freewheel.tv>
# Date              : 2017-09-12
# Last Modified Date: 2017-09-12
# Last Modified By  : Hongbo Liu <hbliu@freewheel.tv>

main() {
    local do_nvr_wait=""
    if [[ -n "$NVR_WAIT" ]]; then
        do_nvr_wait="--remote-wait-silent"
    fi
	env NVIM_LISTEN_ADDRESS=${NVIM_LISTEN_ADDRESS}_${TMUX_WINDOW_ID} nvr -s $do_nvr_wait -cc ':wincmd w' -c ":lcd $PWD" $* # -c "${defautl_cmd} $*"
}

main $@
