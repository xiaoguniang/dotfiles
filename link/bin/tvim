main() {
	env NVIM_LISTEN_ADDRESS=${NVIM_LISTEN_ADDRESS}_${TMUX_WINDOW_ID} nvr -s --remote-wait-silent -cc ':wincmd w' -c ":lcd $PWD" $* # -c "${defautl_cmd} $*"
}

main $@
