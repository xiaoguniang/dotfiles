#!/bin/zsh
# Author            : Hongbo Liu <hbliu@freewheel.tv>
# Date              : 2018-01-19
# Last Modified Date: 2018-01-19
# Last Modified By  : Hongbo Liu <hbliu@freewheel.tv>

usage() {
cat << EOF
Usage: $(basename $0) resource_type search_pattern

Options:
  -h             show this usage
  -a             search in all namespaces
  -n|--namespace specify namespace
  
EOF
exit 0
}

main() {
    zparseopts -D -E -M -A Args -- n: -namespace:=n a -all-namespaces=a
    local resource="$1"
    local pattern="$2"
    local opt_ns=""

    if (( ${+Args[-n]} )); then
        opt_ns="-n${Args[-n]}"
    fi

    if (( ${+Args[-a]} )); then
        opt_ns_all="--all-namespaces"
    fi

    if (( ${+Args[-h]} )); then
        usage
    fi

    kubectl get $resource $opt_ns $opt_ns_all -o wide | grep -E "$pattern"
}

main $@
